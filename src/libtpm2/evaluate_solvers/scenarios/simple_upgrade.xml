<scenario name="simple_upgrade">
	<universe>
		<pkg>
			<name>a</name>
			<arch>amd64</arch>
			<source_version>2.3</source_version>
			<binary_version>1.0</binary_version>
			<files>
				<f>/usr/bin/a</f>
			</files>
			<deps>
				<pkg>
					<name>b</name>
					<arch>amd64</arch>
					<constr type="gt">0.9</constr>
				</pkg>
				<pkg>
					<name>c</name>
					<arch>amd64</arch>
					<constr type="eq">1.1</constr>
				</pkg>
			</deps>
		</pkg>
		<pkg>
			<name>a</name>
			<arch>amd64</arch>
			<source_version>2.4</source_version>
			<binary_version>1.1</binary_version>
			<files>
				<f>/usr/bin/a</f>
			</files>
			<deps>
				<pkg>
					<name>b</name>
					<arch>amd64</arch>
					<constr type="geq">1.1</constr>
				</pkg>
				<pkg>
					<name>c</name>
					<arch>amd64</arch>
					<constr type="eq">1.2</constr>
				</pkg>
			</deps>
		</pkg>

		<pkg>
			<name>b</name>
			<arch>amd64</arch>
			<source_version>1.8</source_version>
			<binary_version>1.0</binary_version>
			<files>
				<f>/usr/lib/b.so</f>
			</files>
		</pkg>
		<pkg>
			<name>b</name>
			<arch>amd64</arch>
			<source_version>2.0</source_version>
			<binary_version>1.1</binary_version>
			<files>
				<f>/usr/lib/b.so</f>
			</files>
		</pkg>

		<pkg>
			<name>c</name>
			<arch>amd64</arch>
			<source_version>1.0</source_version>
			<binary_version>1.1</binary_version>
			<files>
				<f>/usr/lib.c.so</f>
			</files>
		</pkg>
		<pkg>
			<name>c</name>
			<arch>amd64</arch>
			<source_version>1.3</source_version>
			<binary_version>1.2</binary_version>
			<files>
				<f>/usr/lib.c.so</f>
			</files>
		</pkg>
	</universe>

	<installed>
		<pkg>
			<name>a</name>
			<arch>amd64</arch>
			<version>1.0</version>
			<manual>true</manual>
		</pkg>
		<pkg>
			<name>b</name>
			<arch>amd64</arch>
			<version>1.0</version>
			<manual>false</manual>
		</pkg>
		<pkg>
			<name>c</name>
			<arch>amd64</arch>
			<version>1.1</version>
			<manual>false</manual>
		</pkg>
	</installed>

	<selected>
		<pkg>
			<name>a</name>
			<arch>amd64</arch>
			<constr type="gt">1.0</constr>
		</pkg>
	</selected>

	<desired>
		<pkg>
			<name>a</name>
			<arch>amd64</arch>
			<version>1.1</version>
		</pkg>
		<pkg>
			<name>b</name>
			<arch>amd64</arch>
			<version>1.1</version>
		</pkg>
		<pkg>
			<name>c</name>
			<arch>amd64</arch>
			<version>1.2</version>
		</pkg>
	</desired>
</scenario>
